<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vanity.iqbal.activities.ActivityMain"
    tools:ignore="MergeRootFrame" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingTop="10dp" >

        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/books_tab_layout">

        </android.support.design.widget.TabLayout>
        
         <LinearLayout
            android:id="@+id/Layout_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.4"
            android:weightSum="1" >


             
             <android.support.v4.view.ViewPager
			    
			    android:id="@+id/books_pager"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent">
			
			</android.support.v4.view.ViewPager>
     
        
        </LinearLayout>
        
         
          <LinearLayout
            android:id="@+id/Layout_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1" >
        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_gravity="center" >

            
             <ImageView
                android:id="@+id/BtnProfile"
				android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/icon_signed_out"
                android:layout_gravity="center" />
            
            <ImageView
                android:id="@+id/BtnEditorChoice"
				android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/icon_best"
                android:layout_gravity="center" />
            
             <ImageView
                android:id="@+id/BtnBookmarks"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/icon_bookmark"
                android:layout_gravity="center" />
             
         </LinearLayout>
         
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        
        <TextView
                android:id="@+id/textView1_5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" "
                android:gravity="center" />
        
        
        <TextView
                android:id="@+id/textView1_6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" "
                android:gravity="center" />
        
        </LinearLayout>
        
        </LinearLayout>
        
          
           <LinearLayout
            android:id="@+id/Layout_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1" >
             
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1" >
        
            <ImageView
                android:id="@+id/BtnMessageBoard"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/icon_discussion"
                android:layout_gravity="center" />

            
             <ImageView
                android:id="@+id/BtnSearch"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/icon_search"
                android:layout_gravity="center" />
             
             
             <ImageView
                android:id="@+id/BtnInfo"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/icon_info"
                android:layout_gravity="center" />
             
         </LinearLayout>

        
       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        
        <TextView
                android:id="@+id/textView1_7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" "
                android:gravity="center" />
        
        
        <TextView
                android:id="@+id/textView1_8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" "
                android:gravity="center" />
        
        </LinearLayout>
        
       </LinearLayout>
        
        

    </LinearLayout>

</FrameLayout>

