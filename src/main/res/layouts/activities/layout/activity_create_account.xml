<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.ActivityCreateAccount" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="10dp" >

        <EditText
            android:id="@+id/TxtFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_top_bg"
            android:drawableLeft="@drawable/first_last_name"
            android:hint="First Name"
            android:padding="10dp"
            android:inputType="textCapSentences"
            android:textColorHint="#bbbbbb" />

        <EditText
            android:id="@+id/TxtLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:background="@drawable/edittext_default_bg"
            android:drawableLeft="@drawable/first_last_name"
            android:hint="Last Name"
            android:padding="10dp"
            android:inputType="textCapSentences"
            android:textColorHint="#bbbbbb" />
        
         <EditText
            android:id="@+id/TxtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:background="@drawable/edittext_default_bg"
            android:drawableLeft="@drawable/sign_in_user_icon"
            android:hint="Username"
            android:padding="10dp"
            android:inputType="textPersonName"
            android:textColorHint="#bbbbbb" />
         
          <EditText
            android:id="@+id/TxtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:background="@drawable/edittext_default_bg"
            android:drawableLeft="@drawable/password"
            android:hint="Password"
            android:padding="10dp"
            android:password="true"
            android:singleLine="true"
            android:textColorHint="#bbbbbb" />
          
           <EditText
            android:id="@+id/TxtPasswordAgain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:background="@drawable/edittext_default_bg"
            android:drawableLeft="@drawable/password"
            android:hint="Password (again)"
            android:padding="10dp"
            android:password="true"
            android:singleLine="true"
            android:textColorHint="#bbbbbb" />

        <EditText
            android:id="@+id/TxtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:background="@drawable/edittext_bottom_bg"
            android:drawableLeft="@drawable/email"
            android:hint="Email"
            android:padding="10dp"
            android:inputType="textEmailAddress"
            android:textColorHint="#bbbbbb" />

        <Button
            android:id="@+id/BtnCreateAccount"
            style="@style/DefaultButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/btn_big"
            android:padding="10dp"
            android:text="Sign Up" />

        <TextView
        android:id="@+id/TxtInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    </LinearLayout>
    </ScrollView>
</RelativeLayout>