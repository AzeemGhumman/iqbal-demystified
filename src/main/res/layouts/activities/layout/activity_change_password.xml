<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.ActivityChangePassword" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="10dp" >

    
         
          <EditText
            android:id="@+id/TxtChangePassword_Old"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_top_bg"
            android:drawableLeft="@drawable/password"
            android:hint="Current Password"
            android:padding="10dp"
            android:password="true"
            android:singleLine="true"
            android:textColorHint="#bbbbbb" />
          
          
          <EditText
            android:id="@+id/TxtChangePassword_New"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:background="@drawable/edittext_default_bg"
            android:drawableLeft="@drawable/password"
            android:hint="New Password"
            android:padding="10dp"
            android:password="true"
            android:singleLine="true"
            android:textColorHint="#bbbbbb" />
          
           <EditText
            android:id="@+id/TxtChangePassword_New_Repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:background="@drawable/edittext_bottom_bg"
            android:drawableLeft="@drawable/password"
            android:hint="New Password (again)"
            android:padding="10dp"
            android:password="true"
            android:singleLine="true"
            android:textColorHint="#bbbbbb" />
           


        <Button
            android:id="@+id/BtnChangePassword"
            style="@style/DefaultButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/btn_big"
            android:padding="10dp"
            android:text="Change Password" />
        
        
        
        <TextView
        android:id="@+id/TxtChangePassword_Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />
        
        
        
        
    </LinearLayout>


</RelativeLayout>